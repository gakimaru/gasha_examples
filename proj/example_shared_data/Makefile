# 実行ファイル名
PROG_NAME := example_shared_data

# プロジェクトの先頭ディレクトリ
PROJ_BASE_DIR := ..

# ソースファイルの先頭ディレクトリ
SRC_BASE_DIR := $(PROJ_BASE_DIR)/../src
PROJ_SRC_DIR := $(SRC_BASE_DIR)/$(PROG_NAME)

# ソースファイル
SRCS := \
	main.cpp \
	$(PROJ_SRC_DIR)/example_shared_data.cpp \
	$(PROJ_SRC_DIR)/example_shared_data_sub1.cpp \
	$(PROJ_SRC_DIR)/example_shared_data_sub2.cpp \
	$(PROJ_SRC_DIR)/example_shared_data_sub3.cpp \

# インクルードディレクトリ
INCLIDE_DIRS := \
	-I$(PROJ_SRC_DIR)

#-------------------------------------------------------------------------------
# 共通部分をインクルード

include $(PROJ_BASE_DIR)/Makefile_example_common

#-------------------------------------------------------------------------------

# End of file
